<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical" >
<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >



        <EditText
            android:id="@+id/add_ilost_phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            
            android:hint="Address"
            android:textAlignment="center"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/add_ilost_found_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/ilost_date_picker"
                
                android:hint="2015/09/04"
                android:textAlignment="center"
                android:textSize="18sp" />

             <ImageView
            android:id="@+id/ilost_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_today" />
        </RelativeLayout>

        

        <EditText
            android:id="@+id/add_ilost_description"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            
            android:hint="Description"
            android:textAlignment="center"
            android:textSize="18sp" />
        

        <Button
            android:id="@+id/add_ilost_choose_file"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"

            android:hint="Choose File"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/add_ilost_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <Button
            android:id="@+id/add_ilost_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="20sp" />



    </LinearLayout>

</ScrollView>
    </LinearLayout>